<!-- Modal para Cadastro de Usuários -->
<div class="modal fade" id="userModal" tabindex="-1" role="dialog" aria-labelledby="userModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="userModalLabel">Cadastro de Usuário</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="userForm">
          <div class="form-group">
            <label for="userName">Nome</label>
            <input type="text" class="form-control" id="userName" required>
          </div>
          <div class="form-group">
            <label for="userEmail">E-mail</label>
            <input type="email" class="form-control" id="userEmail" required>
          </div>
          <div class="form-group">
            <label for="userMatricula">Matrícula</label>
            <input type="text" class="form-control" id="userMatricula" required>
          </div>
          <div class="form-group" id="sectorField" style="display: none;">
            <label for="userSetor">Setor</label>
            <select class="form-control" id="userSetor">
              <option value="">Selecione o Setor</option>
              <option value="GAE">GAE</option>
              <option value="RE">RE</option>
              <option value="CM">CM</option>
            </select>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-primary" form="userForm">Salvar</button>
      </div>
    </div>
  </div>
</div>